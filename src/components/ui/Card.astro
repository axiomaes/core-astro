---
interface Props {
    padding?: "none" | "sm" | "md" | "lg";
    class?: string;
    [x: string]: any;
}

const { padding = "md", class: className, ...rest } = Astro.props;

const paddings = {
    none: "",
    sm: "p-4",
    md: "p-6",
    lg: "p-8",
};
---

<div
    class:list={[
        "bg-white rounded-2xl shadow-sm border border-slate-200",
        paddings[padding],
        className,
    ]}
    {...rest}
>
    <slot />
</div>
