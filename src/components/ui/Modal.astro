---
interface Props {
    title?: string;
    open: boolean;
    class?: string;
}

const { title, open, class: className } = Astro.props;

if (!open) return null;
---

<div class="fixed inset-0 z-50 flex items-center justify-center p-4 sm:p-6">
    {/* Overlay */}
    <div
        class="fixed inset-0 bg-black/40 transition-opacity"
        aria-hidden="true"
    >
    </div>

    {/* Modal Panel */}
    <div
        class:list={[
            "relative w-full max-w-lg overflow-hidden rounded-2xl bg-white p-6 shadow-xl transition-all",
            className,
        ]}
    >
        {
            title && (
                <header class="mb-4">
                    <h3 class="text-lg font-semibold text-slate-900">
                        {title}
                    </h3>
                </header>
            )
        }

        <div>
            <slot />
        </div>
    </div>
</div>
