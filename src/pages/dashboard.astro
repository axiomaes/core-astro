---
import AppLayout from "../layouts/AppLayout.astro";
import { requireAuth } from "../lib/requireAuth";

const session = await requireAuth(Astro);

if (!session) {
    return Astro.redirect("/login");
}
---

<AppLayout session={session} title="Dashboard">
    <h1>Welcome {session.user.userName}</h1>

    <div
        style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin-top: 20px;"
    >
        <div
            style="padding: 20px; background: #fff; border: 1px solid #dee2e6; border-radius: 8px;"
        >
            <h3>Reservas</h3>
            <p style="font-size: 24px; font-weight: bold;">0</p>
        </div>
        <div
            style="padding: 20px; background: #fff; border: 1px solid #dee2e6; border-radius: 8px;"
        >
            <h3>Clientes</h3>
            <p style="font-size: 24px; font-weight: bold;">0</p>
        </div>
        <div
            style="padding: 20px; background: #fff; border: 1px solid #dee2e6; border-radius: 8px;"
        >
            <h3>Incidencias</h3>
            <p style="font-size: 24px; font-weight: bold;">0</p>
        </div>
        <div
            style="padding: 20px; background: #fff; border: 1px solid #dee2e6; border-radius: 8px;"
        >
            <h3>Tareas</h3>
            <p style="font-size: 24px; font-weight: bold;">0</p>
        </div>
    </div>
</AppLayout>
